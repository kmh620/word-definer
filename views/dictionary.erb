<h1>Dictionary</h1>
<form action="/" method="post">
  <div class="form-group">
    <label for="input-word">Add a word to the dictionary:</label>
    <input id="input-word" name="input-word" class="form-control" type="text">
  </div>
  <button type="submit" class="btn btn-default">Add</button>
</form>



<% if @dictionary.any?() %>
<p>Click on a word to view/ add a definition</p>
<ul>
<% @dictionary.each do |new_word| %>

  <li><a href= "/definition/<%= new_word.id() %>"><%= new_word.word() %></a>
  </li>
  <% end %>
  </ul>
  <% else %>
  <p>There are no words yet</p>
  <% end %>
