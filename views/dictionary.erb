<h1>Dictionary</h1>

<p>Click on a word to view/ add a definition</p>

<% @dictionary.each do |new_word| %>
  <a href="<%= /new_word.id()/add_definition %>"><%= new_word.word() %></a>
<% end %>


<form action="/add_word" method="post">
  <div class="form-group">
    <label for="input-word">Add a word to the dictionary:</label>
    <input id="input-word" name="input-word" class="form-control" type="text">
  </div>
  <button type="submit" class="btn btn-default">Add</button>
</form>
